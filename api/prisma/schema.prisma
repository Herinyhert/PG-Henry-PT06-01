generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Product {
  id           Int            @id @default(autoincrement())
  name         String
  brand        String
  stock        Int
  price        Float
  priceSpecial Float          @default(0)
  img          String
  state        String
  categoryId   Int
  category     Category       @relation(fields: [categoryId], references: [id])
  order_detail Order_detail[]
  review  Review[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

// ---Manuel Romero---------//
enum Role {
  CLIENT
  ADMIN
}

enum UserState {
  ACTIVE
  BLOCKED
  NOTCONFIRMED
}

enum ReviewState {
  PENDING
  VIEWED
  COMPLETED
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  surname  String
  email    String    @unique @db.VarChar(255)
  password String?
  state    UserState @default(NOTCONFIRMED)
  role     Role      @default(CLIENT)
  orderU   Order[]
  review  Review[]
}

model Order {
  id             Int            @id @default(autoincrement())
  amount         Float
  date           DateTime       @default(now())
  status         String
  userId         Int
  payment_id     String
  payment_status String
  payment_type   String
  user           User           @relation(fields: [userId], references: [id])
  order_detail   Order_detail[]
}

model Order_detail {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  price     Float
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
  order     Order   @relation(fields: [orderId], references: [id])
}

model Review {
  @@id([userId, productId])
  value Int?
  state ReviewState @default(PENDING)
  userId Int 
  user User @relation(fields: [userId], references: [id])
  productId Int
  product Product @relation(fields: [productId], references: [id]) 
}
